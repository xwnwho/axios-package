{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2021",
    "rootDir": "src/",
    "outDir": ".",
    "declaration": true,
    "declarationDir": "types/",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}